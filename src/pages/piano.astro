---
import '../styles-piano/main.css'
import PianoKey from "../components/Piano/PianoKey.astro";
---

<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/webp"
			href="/creativefrontdev-favicon.webp"
		/>
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Not found page, from Anas (Me ). I do frontend, but Iâ€™m also all about interactions, animations, and visual delight."
		/>
		<title>Not found</title>
	</head>
	<body>
		<section
			class="relative bg-[#f1f1eb] w-full min-h-screen grid overflow-hidden text-black"
		>
			<div
				class="relative w-full h-full flex flex-col items-center justify-center gap-3 -translate-y-15 z-10 pointer-events-none"
			>
				<div
					class="text-[10rem] sm:text-[15rem] duration-300 font-light leading-[1]"
				>
					404
				</div>
				<div class="text-sm font-semibold mt-4">
					SORRY, THE PAGE IS NOT FOUND
				</div>
				<button
					type="button"
					class="w-fit h-fit bg-zinc-900 hover:bg-zinc-800 duration-100 text-white px-4 py-2.75 rounded-full text-xs cursor-pointer leading-[1] pointer-events-auto"
					>BACK HOME</button
				>
			</div>

			<div class="fixed top-0 left-0 w-full h-full z-0">
				<div class="grid grid-cols-15 h-full">
					<PianoKey letter="q" black={true} l key="1" class="col-span-1" />
					<PianoKey letter="w" black={true} key="2" class="col-span-1" />
					<PianoKey letter="e" class="col-span-1" />
					<PianoKey letter="r" black={true} key="3" class="col-span-1" />
					<PianoKey letter="t" black={true} key="4" class="col-span-1" />
					<PianoKey letter="y" black={true} key="5" class="col-span-1" />
					<PianoKey letter="u" class="col-span-1" />
					<PianoKey letter="i" black={true} key="6" class="col-span-1" />
					<PianoKey letter="o" black={true} key="7" class="col-span-1" />
					<PianoKey letter="p" class="col-span-1" />
					<PianoKey letter="d" black={true} key="8" class="col-span-1" />
					<PianoKey letter="f" black={true} key="9" class="col-span-1" />
					<PianoKey letter="g" black={true} key="0" class="col-span-1" />
					<PianoKey letter="h" class="col-span-1" />
					<PianoKey letter="j" class="col-span-1" />
				</div>
			</div>
		</section>
	</body>
</html>
